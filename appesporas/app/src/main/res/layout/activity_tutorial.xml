<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutorial_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutorial">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageView
            android:id="@+id/imageViewPaso1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            app:srcCompat="@drawable/primer_paso" />
            <TextView
            android:id="@+id/textViewDescripcionPaso1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Este es el primer paso de tu tutorial. Aquí puedes explicar algo importante con texto descriptivo y claro."
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

            <ImageView
                android:id="@+id/imageViewPaso2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/segundo_paso" />

            <TextView
                android:id="@+id/textViewDescripcionPaso2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Y aquí el segundo paso. Puedes usar otra imagen para ilustrar lo que los usuarios deben hacer a continuación."
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginBottom="24dp" />

            <ImageView
                android:id="@+id/imageViewPaso3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/tercer_paso" /> <TextView
                android:id="@+id/textViewDescripcionPaso3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este es el tercer paso. ¡Casi terminamos! Sigue estas instrucciones para completar la tarea."
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginBottom="24dp" />

            <ImageView
                android:id="@+id/imageViewPaso4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp"
                app:srcCompat="@drawable/cuarto_paso" /> <TextView
                android:id="@+id/textViewDescripcionPaso4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Felicidades! Has completado el tutorial. Ahora puedes empezar a usar la aplicación con confianza."
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
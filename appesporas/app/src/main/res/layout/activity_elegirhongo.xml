<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp" android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona un Hongo" android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#11F233"
        android:layout_marginBottom="32dp" /> <Button
    android:id="@+id/btnHongo1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/hongo_1"
    android:backgroundTint="#6200EE" android:textColor="#FFFFFF"
    android:paddingVertical="12dp" /> <Button
    android:id="@+id/btnHongo2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/hongo_2"
    android:layout_marginTop="12dp" android:backgroundTint="#6200EE"
    android:textColor="#FFFFFF"
    android:paddingVertical="12dp" />

    <Button
        android:id="@+id/btnHongo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hongo_3"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:paddingVertical="12dp" />

    <Button
        android:id="@+id/btnHongo4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hongo_4"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:paddingVertical="12dp" />

    <Button
        android:id="@+id/btnMedicionPorCuadro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/conteo_y_medici_n_por_cuadro"
        android:layout_marginTop="48dp" android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:textSize="18sp" android:paddingVertical="16dp" android:elevation="4dp" /> </LinearLayout>
</ScrollView>